<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground"
    android:id="@+id/layoutLoginRegister"
    tools:context=".View.LoginRegisterActivity">

    <include
        android:id="@+id/include"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="@string/faculty_text1"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmi_logo_view" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/faculty_text2"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/fmi_logo_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/faculty_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:srcCompat="@drawable/usm_white" />

    <com.marozzi.roundbutton.RoundButton
        android:id="@+id/registerButton"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:onClick="tryRegister"
        android:text="@string/register_button1"
        android:textAppearance="@android:style/TextAppearance.Widget.DropDownHint"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rb_animation_alpha="false"
        app:rb_animation_corner_radius="14dp"
        app:rb_animation_duration="150"
        app:rb_animation_progress_color="#7dec89"
        app:rb_animation_progress_padding="8dp"
        app:rb_animation_progress_width="2dp"
        app:rb_background_color="#388e43"
        app:rb_background_color_pressed="#1b7325"
        app:rb_corner_color="#79b77e"
        app:rb_corner_color_pressed="#00a63030"
        app:rb_corner_radius="28dp"
        app:rb_corner_width="1dp"
        app:rb_success_resource="@drawable/ic_done_white_48dp"
        app:rb_text_color="#e9e9e9"
        app:rb_text_color_pressed="#ffffff" />

    <com.marozzi.roundbutton.RoundButton
        android:id="@+id/loginButton"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:layout_above="@+id/registerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:onClick="tryLogin"
        android:text="@string/login_button1"
        android:textAppearance="@android:style/TextAppearance.Widget.DropDownHint"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rb_animation_alpha="false"
        app:rb_animation_corner_radius="14dp"
        app:rb_animation_duration="150"
        app:rb_animation_progress_color="#7dec89"
        app:rb_animation_progress_padding="8dp"
        app:rb_animation_progress_width="2dp"
        app:rb_background_color="#49ac55"
        app:rb_background_color_pressed="#1b7325"
        app:rb_corner_color="#79b77e"
        app:rb_corner_color_pressed="#00a63030"
        app:rb_corner_radius="28dp"
        app:rb_corner_width="1dp"
        app:rb_success_resource="@drawable/ic_done_white_48dp"
        app:rb_text_color="#e9e9e9"
        app:rb_text_color_pressed="#ffffff" />


</androidx.constraintlayout.widget.ConstraintLayout>