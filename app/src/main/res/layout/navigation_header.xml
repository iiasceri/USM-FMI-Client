<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="6dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@drawable/background_drawer"
    android:id="@+id/navigation_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/genderImageViewDrawer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="4dp"
        android:contentDescription="@string/my_image"
        android:scaleType="centerCrop"
        android:src="@drawable/female_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameTextViewDrawer"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="16dp"
        android:text="@string/my_name"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/genderImageViewDrawer" />

</androidx.constraintlayout.widget.ConstraintLayout>